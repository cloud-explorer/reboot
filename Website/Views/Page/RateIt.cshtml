@using Projects.Models.Glass.Reboot.Items
@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Projects.Models.Glass.Reboot.ISortFields>
<div class="row ">
    @if (Sitecore.Context.PageMode.IsPageEditor)
    {
        <label title="Rating">Rating: </label>
        Editable(Model, m => m.VoteAverage);
    }
    else
    {
        <div class="col-md-offset-2 col-xs-offset-4 col-md-10">
            <div class="rateit" data-rateit-value="@Model.VoteAverage" data-rateit-ispreset="true"
                 data-rateit-readonly="true" data-rateit-max="10">

            </div>
            <span class="badge">@Model.VoteAverage<text>/10</text></span>
        </div>

    }
</div>

